* {
    font-family:微软雅黑, Arial;
    padding: 0;
    margin: 10px 0 0 0;
    font-size:14px;
}

body{
    width:1000px;
    margin:10px auto;
    background-color:white;
}

a{
    color:gray;
    text-decoration:none;
}

a:hover{
    color:red;
    font-weight:bold;
    text-decoration:none;
}

a:visited{
    text-decoration:none;
}

img{
    vertical-align:middle;
    height: 180px;
}

fieldset{
    padding:10px;
}

legend{
    font-size:16px;
    font-weight:bold;
}

input[type="text"]{
}

input[type="password"]{
    width:150px;
}

textarea{
    width:80%;
    text-align:left;
}

h1, h2, h3 {
    text-align:center;
}

.page-header{
    position:relative;
    height:47px;
    background-color:green;
    border-radius:10px;   
    margin-bottom:5px;
    padding:5px;
    top: 0px;
    left: 0px;
}

.page-header .header-banner{
    float:left;
    width:20%;
    vertical-align:middle;
    height:80%;
}

.page-header .header-title{
    float:left;
    width:60%;
    text-align:center;
    font-size:28px;
    padding-top:1px;
    color:white;
}

.page-header .header-quicklink{
    float:right;
    padding-top:10px;
    height: 20px;
    color:white;
}

.page-body{
    padding:1px;
}

.page-sidebar{
    width:950px;
    /*float:left;*/
    height: 20px;
    /*background-color:pink;*/
    margin-left:30px;
}

.page-content{
    width:950px;
    float:left;
    margin-left:30px;
}

.page-footer{
    clear:both;
    height:80px;
    text-align:center;
    padding-top:50px;
    margin-bottom:10px;
}

.sidebar-menugroup{
    /*padding-bottom:5px;*/
    float:left;
    padding-top:1px;

}

.sidebar-grouptitle{
    width:100%;
    font-size:16px;
    font-weight:bold;
    cursor:pointer;
    text-decoration: none; 
    color:#000000;
}

.sidebar-menu{
    list-style:none;
    padding-left:20px;
}

.page-content .content-nav{
    padding:0 0 10px 0;
}

.listtable{
    width:190px;
    height:200px;
    border:0px solid #afafaf;
    border-collapse:collapse;
    margin-bottom:10px;
    padding: 0px 0px 0px 0px;
}

.listtable caption{
    text-align:left;
    font-size:16px;
    padding:2px;
    font-weight:bold;
}

.listtable td{
    padding:5px;
    border: 1px solid gray;
    font-size:12px;
    text-align:center;
}

.listtable tr:nth-child(2n){
    background-color : #ebeaea;
}

.listtable .listheader{
    background-color:skyblue;
    text-align:center;
}

.listtable .listheader th{
    padding:5px;
    border: 1px solid gray;
}

.formtable {
    width:100%;
    padding: 0 auto;
}

.formtable td{
    padding:5px;
}

.formtable tr td:first-child{
    vertical-align:top;
}

.formtable input[type="radio"] + label{
    margin-right:10px;
}

.formtable .command{
    text-align:center;
}

.formtable .command .clickbutton{
    margin:0 10px;
}

.pager-header{
    
}

.pager-header .header-info{
    float:left;
}

.pager-header .header-info .info-number{
    font-weight:bold;
}

.pager-header .header-nav{
    float:right;
}

.pager-header .header-nav .nav-number{
    width:30px;
    margin:0 5px;
}

.clickbutton {  
    border: 1px solid #4D4D4D;
    padding: 2px 10px;
    cursor:pointer;
    font-size:14px;
}

.error {
    color:red;
}